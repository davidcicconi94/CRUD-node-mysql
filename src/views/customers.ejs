<%- include ('partials/_header') %>

<div class="container">
  <div class="row mt-5">
    <!-- Table -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Name</th>
            <th>Adress</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data %> <% if (data) { %> <% for (var i = 0; i < data.length; i++){
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= data[i].name %></td>
            <td><%= data[i].adress %></td>
            <td><%= data[i].phone %></td>
            <!-- Buttons -->
            <td>
              <div class="btn-group">
                <a href="/delete/<%= data[i].id %>" class="btn btn-danger">
                  Delete</a
                >
                <a href="/update/<%= data[i].id %>" class="btn btn-info">
                  Update</a
                >
              </div>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <!-- Form -->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body m-3">
          <form action="/add" method="post">
            <div class="form-group">
              <input
                type="text"
                name="name"
                placeholder="Name"
                class="form-control"
              />
              <input
                type="text"
                name="adress"
                placeholder="Adress"
                class="form-control mt-3"
              />
              <input
                type="text"
                name="phone"
                placeholder="Phone"
                class="form-control mt-3"
              />
            </div>
            <button type="submit" class="btn btn-primary mt-3">
              Save Customer
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer') %>
